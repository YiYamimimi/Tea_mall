/* 头部 */
.classify-head {
  width: 100%;
  height: 100rpx;
  background: white;
  border-top:1px solid #DCDCDC;
  border-bottom: 1px solid #DCDCDC;
  display: flex;
  justify-content: center;
}
.classify-search {
  width: 95%; 
  height:80rpx;
  background: white; 
  border-radius: 100rpx;
  border: 1rpx solid #ac7f2f;
  align-self: center;
  display: flex;
  justify-content: center;
}
.icon-sou {
  width: 30rpx;
  height: 30rpx;
